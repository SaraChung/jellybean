<div class="post">
  <div class="content">
    <div class="old thumbnail">
      <%= link_to_unless_current image_tag(older_article.thumbnail.url(:thumb), :alt => older_article.title), older_article %>
    </div>
    <div class="old snippet">
      <h2 class="post_title"><%= link_to_unless_current older_article.title, older_article %></h2>
      <div class="date"><%= older_article.published_at.strftime("%A, %B %-d, %Y") %></div>
      <p><%= truncate(strip_tags(older_article.body), length: 200, separator: ' ').gsub(/\n/, '<br/>').html_safe %></p>
    </div>
  </div>
</div>